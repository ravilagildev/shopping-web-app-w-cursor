# Copy to deploy.env and fill in your values

REGION=us-east-1
BUCKET=my-gifts-frontend-123456      # existing S3 bucket for the built frontend
SSH_HOST=ec2-user@1.2.3.4            # SSH user and public IP / hostname of your EC2 (ignored if PROVISION_EC2=true)
KEY_PATH=~/my-keypair.pem            # path to your SSH key
KEY_NAME=my-keypair                  # EC2 key pair name (will be created if missing)
PROVISION_EC2=true                   # set true to create SG + EC2 automatically (default true for first run)
INSTANCE_TYPE=t3.micro               # free tier eligible (x86_64). Change if you prefer smaller/cheaper non-free-tier (e.g., t4g.nano arm64)
SEC_GROUP_NAME=gifts-sg              # used if PROVISION_EC2=true
SSH_USER=ec2-user                    # used if PROVISION_EC2=true
AMI_ARCH=x86_64                      # x86_64 or arm64 (used if PROVISION_EC2=true)

# Backend secrets (for the container)
APP_USERNAME=admin
APP_PASSWORD=changeMe
JWT_SECRET=please-change-to-a-long-random-256-bit-secret

# Optional: persist H2 to a host path on EC2
H2_DATA_PATH=/var/lib/gifts-data     # leave empty to use in-memory H2

